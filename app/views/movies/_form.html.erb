<%= form_for @movie, html: {multipart: true} do |f| %>
  <%= render "shared/error_messages",object: @movie %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :film_length %>
    <%= f.text_field :film_length, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :director %>
    <%= f.text_field :director, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :actors %>
    <%= f.text_field :actors, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category_id, @categories.collect{|p| [p.name, p.id]},
      {include_blank: false}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :country %>
    <%= f.select :country_id, @countries.collect{|c| [c.name, c.id]},
      {include_blank: false}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :link %>
    <%= f.text_field :link, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= select_tag :kind, options_for_select(
      Settings.kinds.collect{|kind| [kind[0], kind[1]]}),
        {class: "kind_select", id: "kind_select"} %>
  </div>

  <%= f.submit (t ".add"), class: "btn btn-primary" %>
  <%= link_to (t ".cancel"), movies_path, class: "btn btn-default" %>
<% end %>
