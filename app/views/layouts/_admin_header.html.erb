<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="main-menu">
    <%= link_to (t ".movie_app"), "#", id: "logo" %>
  </div>
  <div>
    <nav class="right-menu">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to "", admin_movies_path,
            class: "glyphicon glyphicon-home" %>
        </li>
        <li><%= link_to (t ".users"), admin_users_path %></li>
        <li><%= link_to (t ".movies"), admin_movies_path %></li>
        <li><%= link_to (t ".categories"), admin_categories_path %></li>
        <li><%= link_to (t ".countries"), admin_countries_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_registration_path %></li>
              <li class="divider"></li>
              <li><%= link_to t(".logout"), destroy_user_session_path,
                method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to (t ".login"),  new_user_session_path,
            class: "glyphicon glyphicon-log-in" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
