<% provide :title, t(".all_movies") %>
<h1 class="fix-h1"><%= t ".all_movies" %></h1>
  <div>
    <%= link_to t(".btn_add_new"), new_admin_movie_path,
      {class: "btn btn-primary mg-boot"} %>
  </div>
<%= form_tag admin_movies_path, method: :get do %>
  <div class="form-group row">
    <div class="col-xs-4">
      <%= text_field_tag :search_movie, params[:search_movie], class: "form-control",
        placeholder: t(".search_title") %>
    </div>
    <div class="col-xs-2">
      <%= submit_tag t(".btn_search"), class: "btn btn-default" %>
    </div>
    <div class="col-sm-3">
      <%= select_tag :category_id, options_from_collection_for_select(@categories,
        :id, :name, params[:category_id]), {include_blank: t(".all_categories"),
        class:"form-control", onchange: "this.form.submit();"} %>
    </div>
    <div class="col-sm-3">
      <%= select_tag :country_id, options_from_collection_for_select(@countries,
        :id, :name, params[:country_id]), {include_blank: t(".all_countries"),
        class:"form-control", onchange: "this.form.submit();"} %>
    </div>
  </div>
<% end %>
<table class="table table-hover ls-users">
  <thead class="title_table">
    <tr>
      <th class="text-c"><%= t ".index" %></th>
      <th class="text-c"><%= t ".name" %></th>
      <th class="text-c"><%= t ".created_date" %></th>
      <th class="text-c"><%= t ".updated_date" %></th>
      <th class="text-c"><%= t ".options" %></th>
    </tr>
  </thead>
  <tbody>
      <% @movies.each_with_index do |movie, index| %>
        <tr>
          <td class="text-c">
            <% params[:page] ||= "1" %>
            <%= index_for params[:page], index, Settings.movie.per_page %>
          </td>
          <td class="text-c"><%= link_to movie.name, admin_movie_url(movie.id) %></td>
          <td class="text-c"><%= movie.created_at
            .strftime(t "time.formats.long_datetime") %></td>
          <td class="text-c"><%= movie.updated_at
            .strftime(t "time.formats.long_datetime") %></td>
          <td class="text-c">
            <%= link_to edit_admin_movie_path(movie),
              title: t(".movie_edit") do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
            <%= link_to raw("<span class='glyphicon glyphicon-trash
              text-danger'></span>"), [:admin, movie], method: :delete,
              title: t(".movie_delete"), data: {confirm: t(".confirm_delete")} %>
            <%= link_to t(".btn_detail"), admin_movie_url(movie.id),
              class: "btn btn-success btn-sm" %>
        </tr>
      <% end %>
  </tbody>
</table>
<%= paginate @movies %>
