<% provide title: (t ".title") %>
<div class="cover-form">
  <%= link_to (t ".btn_add_new"), new_admin_category_path,
    {class: "btn btn-primary mg-boot"} %>
  <% if @categories.any? %>
    <table class="table table-hover">
      <tr>
        <th class="text-c"><%= t ".order" %></th>
        <th class="text-c"><%= t ".category_name" %></th>
        <th class="text-c"><%= t ".options" %></th>
      </tr>
      <%= render @categories %>
    </table>
    <div class="text-c">
      <%= paginate @categories, theme: "twitter-bootstrap-3" %>
    </div>
  <% end %>
</div>
